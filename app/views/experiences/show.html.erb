<div class="slider-wrapper">
  <div class="slider">
    <% @experience.photos.each do |photo| %>
    <div class="slider--item" style="background-image: url('<%= cl_image_path(photo.photo) %>')">
    </div>
    <% end %>
  </div>
</div>

<% if policy(@experience).edit? %>
  <%= link_to "Edit", edit_experience_path(@experience), class: "btn btn-primary" %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3><%= @experience.name %></h3>
      <p><%= @experience.description %></p>
      <p><strong>Location of <%= @experience.name %>'s experience</strong>
        <p><%= @experience.locality %></p>
        <p><%= @experience.country %></p>
        <p><%= @experience.region %></p>
        <p><%= @experience.bucket_list_count %></p>

      <div class="col-xs-6">
        <h3>You may also like:</h3>
        <ul>
          <li>
            Hot Air Balooning Grand Canyon
          </li>
          <li>
            Hot Air Balooning Cape Town
          </li>
          <li>
            Hot Air Balooning Victoria Falls
          </li>
          <li>
            Hot Air Balooning Marrakech
          </li>
          <li>
            Hot Air Balooning in Bath
          </li>
        </ul>
      </div>
    </div>

    <!-- FRONTEND FOR TOURS AT EXPERIENCE SHOW -->
    <div class="container tours">
      <div class="row">
        <div class="col-xs-12 col-sm-10">
          <h1>Recommended Tours</h1>
          <%= render 'shared/viator' %>
          <%= render 'shared/viator' %>
        </div>
      </div>
    </div>

    <!-- FRONTEND FOR ACCOMMODATIONS AT EXPERIENCE SHOW -->
    <div class="container other-accomodation">
      <div class="row">
        <div class="col-xs-12 col-sm-10">
          <h1>Family-friendly accommodation nearby</h1>
          <%= render 'shared/booking' %>
        </div>
      </div>
    </div>

    <!-- FAST xs-12 sm-10 CLASS AROUND THE REVIEWS -->
    <div class="container reviews">
      <div class="row">
        <div class="col-xs-12 col-sm-10">
          <%= render 'reviews/form', type_review: @experience, review: @review %>
          <h3>
            <%= pluralize @experience.reviews.size, "review" %>
          </h3>
          <div id="reviews">
            <% if @experience.reviews.blank? %>
            Be the first to leave a review for <%= @experience.name %>
            <% else %>
            <% @experience.reviews.each do |review| %>
            <%= render 'reviews/show', review: review %>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>">
</div>

