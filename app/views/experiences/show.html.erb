<h1>This is the Experience Show Page</h1>

<h3><%= @experience.name %></h3>

<p><%= @experience.description %></p>

<p><strong>Location of <%= @experience.name %>'s experience</strong>

<p><%= @experience.address %></p>

<p> â‚¬<%= @experience.price %></p>

<%#= cl_image_tag @experience.photo, height: 300, width: 455, crop: :fill %>

<!-- Reviews -->
<div>
  <p><strong>Reviews</strong></p>
  <div>
    <p><strong><%= pluralize @experience.reviews.size, "review" %></strong></p>
    <div id="reviews">
      <%= render "experiences/form", experience: @experience, review: @review %>
      <% if @experience.reviews.blank? %>
      Be the first to leave a review for <%= @experience.name %>
      <% else %>
      <ul id="reviews-list">
        <% @experience.reviews.order(created_at: :desc).each do |review| %>
        <%= render 'reviews/show', review: review %>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>
</div>

<div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>">

</div>

