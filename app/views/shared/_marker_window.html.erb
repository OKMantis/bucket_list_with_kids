<% if selection.class == Destination %>
  <%= link_to destination_path(selection) do %>
  <%= selection.name %>
  <%= cl_image_tag (selection.photos.first.photo) %>
  <% end %>
<% elsif selection.class == Accommodation %>
  <%= link_to accommodation_path(selection) do %>
  <%= selection.name %>
  <%= cl_image_tag(selection.photos.first.photo) %>
  <% end %>
<% else %>
  <%= link_to experience_path(selection) do %>
  <%= selection.name %>
  <%= cl_image_tag(selection.photos.first.photo) %>
  <% end %>
<% end %>
