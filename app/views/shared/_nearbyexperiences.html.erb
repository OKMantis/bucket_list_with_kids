<% @experiences.each do |experience| %>
<div class="product">
  <img src="<%= experience.photos.present? && experience.photos.any? ? safe_cl_image_path_for_photo(experience.photos.first) || "" : "" %>" alt="" class="product-image hidden-xs">
  <div class='product-body'>
    <%= link_to experience_path(experience) do %>
    <h3><%= experience.name %> hour</h3>
    <% end %>
  </div>
  <div class="link-to-see-experience">
    <%= link_to "See tour", experience_path(experience), class: "btn btn-danger" %>
  </div>
</div>
<% end %>
